                    <form action="/links/team/teams" method="POST">
                        <div class="form-group">
                            <h5 class="mt-3">Nombre del Equipo</h5>
                            <input type="text" class="form-control" name="squad" placeholder="Nombre del Equipo"
                                autofocus>
                        </div>
                        <br>
                        <div class="form-grou">
                            <h5 class="mt-3">Nombre del Dueño</h5>
