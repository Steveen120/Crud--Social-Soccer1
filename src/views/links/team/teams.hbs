<link rel="stylesheet" href="/css/player.css">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/teams/team" method="POST">
                       <div id="title">Crear</div>
                    <div id="sub-title">Experiencia</div>
                    <div id="input">
                         <div id="inputBox">
                            <label>Nombre del Jugador</label>                            
                            <input type="text" class="form-control" name="squad" placeholder="Nombre del Equipo"
                                autofocus>
                        </div>                        
                        <div id="inputBox">
                            <label>Nombre del Dueño</label>                            
                            <input type="text" name="boss" class="form-control"
                                placeholder="Nombre del dueño del equipo ">
                        </div>
                        <div id="inputBox">
                            <label>Nombre del Entrenador</label>
                            <h5 class="mt-3">Nombre del Entrenador</h5>
                            <input type="text" name="coach" class="form-control"
                                placeholder="Nombre del entrenador del equipo ">
                        </div>
                        <div id="inputBox">
                            <label>Fecha de fundacion</label>
                        <input type="date" name="foundation" class="form-control" placeholder="Fecha de fundacion ">
                        <div id="inputBox">
                            <input type="submit" value="Guardar" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
