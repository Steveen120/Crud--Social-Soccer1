<div class="container p-4">
    <div class="row">
        {{#each players}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card text-uppercase">
                        {{nombrejugador}}
                    </h3>
                    <p class="m-2">{{apellidojugador}}</p>
                    <p class="m-2">{{posicionjugador}}</p>
                    <p class="m-2">{{alturajugador}}</p>
                    <p class="m-2">{{edadjugador}}</p>
                    <a href="/links/delete-players/{{id}}" class="btn btn-danger">Eliminar</a>
                    <a href="/links/edit-players/{{id}}" class="btn btn-secondary">Editar</a>

                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay registro guardados a un </p>
                <a href="/players"> Agrega uno haciendo click aqui</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>