
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/teamstats/edit-teamstat:{{teamstats.id}}" method="POST">
                        <h5 class="mt-3">Valoracion del Equipo</h5>
                        <div name="teamvaluation">
                            <select name="teamvaluation" aria-label="Default select example" class="form-select">
                                <option value="Malo">Malo</option>
                                <option value="Regular">Regular</option>
                                <option value="Bueno">Bueno</option>
                                <option value="Excelente">Excelente</option>
                                <option value="Estrella">Estrella</option>
                            </select>
                        </div>
                        <h5 class="mt-3">Quimica del Equipo</h5>
                        <div class="form-group">
                            <input type="text" value="{{teamstats.teamchemistry}}" name="teamchemistry" class="form-control"
                                placeholder="Quimica del Equipo">
                        </div>
                        <h5 class="mt-3">Triunfos Del Equipo</h5>
                        <div class="form-group">
                            <input type="text" value="{{teamstats.teamwins}}" name="teamwins" class="form-control"
                                placeholder="Triunfos Del Equipo">
                        </div>
                        <div class="form-group mt-3 d-grid">
                            <button type="submit" class="btn btn-success btn-block"> Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
