<link rel="stylesheet" href="/css/player.css">
                <div class="card-body">
                    <form action="/statistics/edit-statistic/{{statistic.id}}" method="POST">
                    <div id="title">Crear</div>
                    <div id="sub-title">Experiencia</div>
                    <div id="input">
                        <div id="inputBox">
                            <label>Nombre del Jugador</label>                    
                            <input type="text" value="{{statistic.id_player}}" class="form-control" name="id_player" placeholder="Nombre del Jugador" autofocus>
                        </div>
                         <div id="inputBox">
                            <label>Tipo del Jugador</label>
                            <input type="text" value="{{statistic.id_statistic}}" name="id_statistic" class="form-control"
                                placeholder="Tipo del Jugador">
                        </div>
                         <div id="inputBox">
                            <label>Rirtmo del Jugador</label>
                            <input type="text" value="{{statistic.swing}}" name="swing" class="form-control" placeholder="Ritmo del jugador">
                        </div>
                         <div id="inputBox">
                            <label>Tiro del Jugador</label>
                            <input type="text" value="{{statistic.threw}}" name="threw" class="form-control" placeholder="Tiro del jugador">
                        </div>
                         <div id="inputBox">
                            <label>Pasee del Jugador</label>
                            <input type="text" value="{{statistic.happens}}" name="happens" class="form-control" placeholder="Pase del jugador">
                        </div>
                         <div id="inputBox">
                            <label>Agilidad del Jugador</label>
                            <input type="text" value="{{statistic.agility}}" name="agility" class="form-control" placeholder="Agilidad del jugador">
                        </div>
                         <div id="inputBox">
                            <label>Defensa del Jugador</label>
                            <input type="text" value="{{statistic.defending}}" name="defending" class="form-control" placeholder="Defensa del jugador">
                        </div>
                         <div id="inputBox">
                            <label>Físico del Jugador</label>
                            <input type="text" value="{{statistic.physical}}" name="physical" class="form-control" placeholder="Físico del jugador">
                        </div>
                        <div id="inputBox">
                            <input type="submit" value="Guardar" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
