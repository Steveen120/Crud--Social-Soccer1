<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/links/edit-statistics/:{{statistics.id}}" method="POST">
                    <h5 class="mt-3">Nombre del Jugador</h5>
                        <div class="form-group">
                            <input type="text" value="{{statistics.id_player}}" class="form-control" name="id_player" placeholder="Nombre del Jugador" autofocus>
                        </div>
                        <h5 class="mt-3">Tipo del Jugador</h5>
                        <div class="form-grou">
                            <input type="text" value="{{statistics.id_statistics}}" name="id_statistics" class="form-control"
                                placeholder="Tipo del Jugador">
                        </div>
                        <h5 class="mt-3">Ritmo del jugador</h5>
                        <div class="form-grou">
                            <input type="text" value="{{statistics.swing}}" name="swing" class="form-control" placeholder="Ritmo del jugador">
                        </div>
                        <h5 class="mt-3">Tiro del jugador</h5>
                        <div class="form-grou">
                            <input type="text" value="{{statistics.threw}}" name="threw" class="form-control" placeholder="Tiro del jugador">
                        </div>
                        <h5 class="mt-3">Pase del jugador</h5>
                        <div class="form-grou">
                            <input type="text" value="{{statistics.happens}}" name="happens" class="form-control" placeholder="Pase del jugador">
                        </div>
                        <h5 class="mt-3">Agilidad del jugador</h5>
                        <div class="form-grou">
                            <input type="text" value="{{statistics.agility}}" name="agility" class="form-control" placeholder="Agilidad del jugador">
                        </div>
                        <h5 class="mt-3">Defensa del jugador</h5>
                        <div class="form-grou">
                            <input type="text" value="{{statistics.defending}}" name="defending" class="form-control" placeholder="Defensa del jugador">
                        </div>
                        <h5 class="mt-3">Físico del jugador</h5>
                        <div class="form-grou">
                            <input type="text" value="{{statistics.physical}}" name="physical" class="form-control" placeholder="Físico del jugador">
                        </div>
                        <div class="form-group mt-3 d-grid">
                            <button  type="submit" class="btn btn-success btn-block"> Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>