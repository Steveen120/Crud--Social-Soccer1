<div class="container p-4">
    <div class="row">
        {{#each statistic}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card text-uppercase">
                        {{id_player}}
                    </h3>
                    <p class="m-2">{{id_statistic }}</p>
                    <p class="m-2">{{swing }}</p>
                    <p class="m-2">{{threw }}</p>
                    <p class="m-2">{{happens }}</p>
                    <p class="m-2">{{agility}}</p>
                    <p class="m-2">{{defending}}</p>
                    <p class="m-2">{{physical }}</p>
                    <a href="/links/delete-estadisticas/{{id}}" class="btn btn-danger">Eliminar</a>
                    <a href="/links/edit-estadisticas/{{id}}" class="btn btn-secondary">Editar</a>

                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay registro guardados a un </p>
                <a href="/links/estadisticas"> Agrega uno haciendo click aqui </a>
            </div>
        </div>
        {{/each}}

    </div>
</div>