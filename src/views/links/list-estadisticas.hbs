<div class="container p-4">
    <div class="row">
        {{#each estadisticas}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card text-uppercase">
                        {{id_jugador}}
                    </h3>
                    <p class="m-2">{{id_estadisticas}}</p>
                    <p class="m-2">{{ritmo}}</p>
                    <p class="m-2">{{tiro}}</p>
                    <p class="m-2">{{pase}}</p>
                    <p class="m-2">{{agilidad}}</p>
                    <p class="m-2">{{defensa}}</p>
                    <p class="m-2">{{fisico}}</p>
                    <a href="/links/delete-estadisticas/{{id}}" class="btn btn-danger">Eliminar</a>
                    <a href="/links/edit-estadisticas" class="btn btn-secondary">Editar</a>

                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay registro guardados a un </p>
                <a href="/links/estadisticas"> Agrega uno haciendo click aqui </a>
            </div>
        </div>
        {{/each}}

    </div>
</div>